<section id="hero" class="bg-bg-hero bg-cover bg-center h-[680px]">
  
  <div class="container-central h-full py-12 text-white">
    <h1 class="font-roboto px-4 text-4xl text-center font-bold drop-shadow-md mt-[128px] md:text-6xl ">
      Gestoría de Ciudadanías y Pasaportes, Españoles e Italianos
    </h1>

    <div class="mt-8 p-8 text-2xl text-center">
      <h2 class="font-roboto drop-shadow-md">
